{
  "name": "drizzle-zero",
  "version": "0.7.0",
  "description": "Generate Zero schemas from Drizzle ORM schemas",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist node_modules coverage && cd integration && rm -rf node_modules",
    "build": "tsup src/index.ts src/pg/index.ts src/build.ts --format cjs,esm --dts",
    "cli": "node dist/build.js",
    "release": "pnpm run build && pnpm publish",
    "test": "vitest run --typecheck --coverage",
    "test:types": "cd tests && tsc --noEmit",
    "test:ui": "vitest --ui"
  },
  "bin": {
    "drizzle-zero": "./dist/build.js"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BriefHQ/drizzle-zero.git"
  },
  "keywords": [
    "zero",
    "sync",
    "local-first",
    "schema",
    "drizzle",
    "orm",
    "pg",
    "postgresql",
    "postgres",
    "database",
    "typescript",
    "ts"
  ],
  "author": "BriefHQ",
  "license": "Unlicense",
  "homepage": "https://github.com/BriefHQ/drizzle-zero",
  "bugs": {
    "url": "https://github.com/BriefHQ/drizzle-zero/issues"
  },
  "peerDependencies": {
    "@rocicorp/zero": ">=0.13.2025013101",
    "drizzle-orm": ">=0.36.0"
  },
  "devDependencies": {
    "@rocicorp/zero": "^0.18.2025040300",
    "@types/node": "^22.14.1",
    "@vitest/coverage-v8": "3.1.1",
    "@vitest/ui": "^3.1.1",
    "drizzle-orm": "^0.41.0",
    "esbuild": "^0.25.2",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "packageManager": "pnpm@10.8.1+sha256.d8b2ebbc65cf02c349eca6b45c9640b910f16b6adebdb7b926e9db440e47cac7"
}
