{
  "name": "drizzle-zero",
  "version": "0.5.1",
  "description": "Generate Zero schemas from Drizzle ORM schemas",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist node_modules coverage && cd integration && rm -rf node_modules",
    "build": "tsup src/index.ts src/pg/index.ts src/build.ts --format cjs,esm --dts",
    "release": "pnpm run build && pnpm publish",
    "test": "vitest run --typecheck --coverage",
    "test:types": "cd tests && tsc --noEmit",
    "test:ui": "vitest --ui"
  },
  "bin": {
    "build-schema": "./dist/build.js"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./pg": {
      "import": "./dist/pg/index.js",
      "require": "./dist/pg/index.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BriefHQ/drizzle-zero.git"
  },
  "keywords": [
    "zero",
    "sync",
    "local-first",
    "schema",
    "drizzle",
    "orm",
    "pg",
    "postgresql",
    "postgres",
    "database",
    "typescript",
    "ts"
  ],
  "author": "BriefHQ",
  "license": "Unlicense",
  "homepage": "https://github.com/BriefHQ/drizzle-zero",
  "bugs": {
    "url": "https://github.com/BriefHQ/drizzle-zero/issues"
  },
  "peerDependencies": {
    "@rocicorp/zero": ">=0.13.2025013101",
    "drizzle-orm": ">=0.36.0"
  },
  "devDependencies": {
    "@rocicorp/zero": "^0.16.2025022800",
    "@types/node": "^22.13.10",
    "@vitest/coverage-v8": "3.0.8",
    "@vitest/ui": "^3.0.8",
    "drizzle-orm": "^0.40.0",
    "esbuild": "^0.25.0",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.8"
  }
}
