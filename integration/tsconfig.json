{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
  
    "moduleResolution": "bundler",
    "moduleDetection": "force",

     
    "allowJs": true,
    "types": ["node", "vitest"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["dom", "ESNext"],
    "outDir": "out",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": ["**/*.ts"]
}
